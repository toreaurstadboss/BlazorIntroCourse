@page "/NavigationLockdemo"
@inject IJSRuntime JsRunTime

<h3>NavigationLockDemo</h3>

<NavigationLock ConfirmExternalNavigation="true" OnBeforeInternalNavigation="OnBeforeInternalNaviation" />

<a href="https://www.dagbladet.no">Ekstern lenke - Dagbladet</a>

@code {

    private async Task OnBeforeInternalNaviation(LocationChangingContext ctx)
    {
        bool isConfirmed = await JsRunTime.InvokeAsync<bool>("confirm", "Are you sure you want to navigate away from this page?"); 
        if (!isConfirmed)
        {
            ctx.PreventNavigation();
        }   
    }

}
